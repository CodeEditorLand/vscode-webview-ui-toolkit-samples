{
	"name": "notepad",
	"displayName": "notepad",
	"description": "A sample extension that showcases the Webview UI Toolkit for VS Code alongside the VS Code TreeView and Webview API",
	"main": "./out/extension.js",
	"scripts": {
		"compile": "node ./esbuild.js"
	},
	"contributes": {
		"commands": [
			{
				"command": "notepad.createNote",
				"icon": "$(add)",
				"title": "Notepad: Create a note"
			},
			{
				"command": "notepad.deleteNote",
				"icon": "$(trash)",
				"title": "Notepad: Delete note"
			}
		],
		"menus": {
			"view/item/context": [
				{
					"command": "notepad.deleteNote",
					"group": "inline"
				}
			],
			"view/title": [
				{
					"command": "notepad.createNote",
					"group": "navigation@1"
				}
			]
		},
		"views": {
			"notepad": [
				{
					"id": "notepad.notesList",
					"name": "My Notes",
					"type": "tree",
					"visibility": "visible"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"icon": "$(notebook)",
					"id": "notepad",
					"title": "Notepad"
				}
			]
		},
		"viewsWelcome": [
			{
				"contents": "No notes yet!\n[Create a note](command:notepad.createNote)",
				"view": "notepad.notesList"
			}
		]
	},
	"dependencies": {
		"uuid": "11.0.5"
	},
	"devDependencies": {
		"@types/glob": "8.1.0",
		"@types/node": "22.13.0",
		"@types/uuid": "10.0.0",
		"esbuild": "0.24.2",
		"esbuild-plugin-copy": "2.1.1",
		"glob": "11.0.1"
	}
}
